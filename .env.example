# =============================================================================
# WA2Bridge Environment Configuration
# =============================================================================
# Copy this file to .env and update values for your environment
# Required variables are marked with [REQUIRED]
# =============================================================================

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------

# Port to run the API server on
PORT=3000

# Host/IP to bind to (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
HOST=0.0.0.0

# Environment mode (development or production)
# In production: hides detailed error messages
NODE_ENV=development

# -----------------------------------------------------------------------------
# Authentication [REQUIRED]
# -----------------------------------------------------------------------------

# API secret key for Bearer token authentication
# Generate a secure random string: openssl rand -hex 32
# Must match WA_BRIDGE_SECRET in your Laravel .env
API_SECRET=your-secure-api-secret-here

# -----------------------------------------------------------------------------
# Laravel Integration
# -----------------------------------------------------------------------------

# Webhook URL to receive WhatsApp events (incoming messages, status updates)
# Points to your Laravel WhatsApp2App webhook endpoint
# Leave empty to disable webhooks
WEBHOOK_URL=http://localhost:8000/api/webhook/whatsapp

# CORS origin for dashboard/frontend access
# Use '*' for development, specific origin for production
# Example: https://your-domain.com
CORS_ORIGIN=*

# -----------------------------------------------------------------------------
# Message Timing (Anti-Ban Protection)
# -----------------------------------------------------------------------------

# Base delay between messages in milliseconds
# Higher = safer but slower (recommended: 1000-3000)
MESSAGE_DELAY_MS=1500

# Typing indicator duration in milliseconds
# Simulates human typing speed (recommended: 300-1000)
TYPING_DELAY_MS=500

# -----------------------------------------------------------------------------
# Account & Activity Settings
# -----------------------------------------------------------------------------

# How old is this WhatsApp account in weeks?
# Newer accounts have stricter rate limits
# 0-2 weeks: Very restricted
# 2-4 weeks: Restricted
# 4+ weeks: Normal limits
ACCOUNT_AGE_WEEKS=4

# Active hours range (24-hour format)
# Messages outside these hours get extra delays
# Helps avoid suspicious activity patterns
ACTIVE_HOURS_START=7
ACTIVE_HOURS_END=23

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------

# Log level: fatal, error, warn, info, debug, trace
# Use 'debug' for development, 'info' or 'warn' for production
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# CLI Configuration (for wa2bridge CLI tool)
# -----------------------------------------------------------------------------

# API URL for CLI commands (usually same as this server)
API_URL=http://localhost:3000
